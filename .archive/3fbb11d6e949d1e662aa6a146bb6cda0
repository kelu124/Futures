    var ele_p = $('.content p');
    var reg = /[,.……!;\n$]/gi;
    var reg1 = /s+/g;
    var arr =new Array();
    var wordCount = 0;
    const quot= ',';
    for(var i=0;i<ele_p.length;i++){
        var str = ele_p.eq(i).text().replace(reg,'');
        var string = str.split(' ').join(',').trim()+',';
        arr.push(string);
        for(var j=i;j<arr.length;j++){
           wordCount += arr[j].split(',').length;
        }
    }
    var timeSpending = Math.ceil(wordCount/250);
    $('.wrap-heading .read-time').html(timeSpending+'-min read');
    });
