<script type="text/javascript" src="//afd8.t4m.cn/applink.js"></script>
<script>
$(function(){
        showDetail();
        isWeiXin();
        showAppMoblink();

        //1.获取url，让新增的底部栏显现
        function showAppMoblink() {
            var contType = "0";
           var urlobj = window.location.pathname.split('/');
           var urltypePage = urlobj[1];
           var urlid = urlobj[2];
           if(urltypePage == '' || urltypePage == 'features' || urltypePage == 'users' ||  urltypePage == 'ht_news' || urltypePage == 'news') {
            //    $(".detail_download_box").show();
            //    $(".db_box_one").attr('id','vuemoblink_'+urlid+'pc');
               $(".footer_right").attr('id','vuemoblink_'+urlid);
               addIdAndType(urltypePage,urlid, contType)
               vueMoblinkInit();
           }else {
               $(".detail_download_box").hide();
               $(".detail_page_footer").hide();
           }
        }
        // 2. 动态添加data-type，data-id
        function addIdAndType(type,id, contType){
              // 视频新闻
              if(contType == '9'){
                  $(".db_box_one").attr({'data-type':'9','data-id':id})
                  $(".footer_right").attr({'data-type':'9','data-id':id})
                  return;
              }
              if(type == '') {
                  $(".db_box_one").attr({'data-type':'1','data-id':id})
                  $(".footer_right").attr({'data-type':'1','data-id':id})
              }else if (type == 'features') {
                  $(".db_box_one").attr({'data-type':'2','data-id':id})
                  $(".footer_right").attr({'data-type':'2','data-id':id})
              }else if (type == 'users') {
                  $(".db_box_one").attr({'data-type':'3','data-id':id})
                  $(".footer_right").attr({'data-type':'3','data-id':id})
              }else if (type == 'news') {
                  $(".db_box_one").attr({'data-type':'4','data-id':id})
                  $(".footer_right").attr({'data-type':'4','data-id':id})
              }else if (type == 'ht_news') {
                  $(".db_box_one").attr({'data-type':'5','data-id':id})
                  $(".footer_right").attr({'data-type':'5','data-id':id})
              }
        }
        //3. Moblink
        function vueMoblinkInit(){
            var mobArray = [];
            $("a[id^='vuemoblink']").each(function(){
                var id = $(this).attr('id');
                var contType = $(this).data("type")+"";
                var contId = $(this).data("id")+"";
                var obj = {
                    el:"#"+id,
                    path:"demo/a"
                };
                obj.params = {
                    contType:contType,
                    contId:contId
                };
                mobArray.push(obj);
            })
            MobLink(mobArray)
        }
        // 4.判断是否是微信打开
        function isWeiXin(){
            var ua = window.navigator.userAgent.toLowerCase();
            if((ua.match(/MicroMessenger/i) == 'micromessenger' || ua.match(/_SQ_/i) == '_sq_')&&(ua.indexOf('android') > -1 || ua.indexOf('linux') > -1)){
                $(".weixin_detail_footer").show();
                $(".detail_page_footer").hide();
                $(".df_end_word").text("on the Google Play to download app");
            }
            else if((ua.match(/MicroMessenger/i) == 'micromessenger' || ua.match(/_SQ_/i) == '_sq_')&&(ua.indexOf('iphone') > -1 ||ua.indexOf('iPhone') > -1)){
                $(".weixin_detail_footer").show();
                $(".detail_page_footer").hide();
            }
            else {
                //showAppMoblink();
                $(".weixin_detail_footer").hide();
            }
        }
        //  5.商城只出现在详情页
        function showDetail() {
            var urlobj = window.location.pathname.split('/');
            var urltypePage = urlobj[1];
            var urlid = urlobj[2];
            var screenWidth = $(window).width();
            if(screenWidth < 768) {
