			$("#toastMessageDisclaimer").html("请参阅完整的免责声明。");
		}
		if (trg == 'ru') {
			$("#toastMessage").html("Это машинный перевод, основанный на оригинальной английской версии.");
			$("#toastMessageDisclaimer").html("Ознакомьтесь с правовой оговоркой.");
		}
		if (trg == 'es') {
			$("#toastMessage").html("Esta es una traducción automática basada en una versión original en inglés.");
			$("#toastMessageDisclaimer").html("Véase la cláusula de descargo de responsabilidad.");
		}
	}
