//}).css("width", "800px");

var arr = localStorage.MyMainBody;
                //console.log(arr)
                console.log("Translating...")
                var current_url = window.location.href

//Edited on 18 March 2022
//Old: https://nmt.itu.int/api/translate_html
//Not working: https://www.itu.int/itad/nmt/api/translate_html
              
        $.post("https://www.itu.int/itad/nmt/api/translate_html?"+ $.now(), {
            innerHTML: localStorage.MyMainBody.replace(/[\u200B-\u200D\uFEFF]/g, ''),
            lang: trg, 
            site: $(document).find("title").text(), 
            url: current_url })
            .done(function (data) {
			progress.classList.remove("active");
			toast.classList.remove("active");
			clearTimeout(timer1);
        	clearTimeout(timer2);
        document.body.innerHTML = data
       $( ".lang-dropdown-menu" ).removeClass( "show" )
        setTimeout(function () {
       // $('a').attr('target', '_blank');
                $('#OriginalPage').attr('target', '_self');
