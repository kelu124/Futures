                $('#AutoTransEs').attr('target', '_self');
                $('#AutoTransZh').attr('target', '_self');
                $('#AutoTransRu').attr('target', '_self');
			
                
    }, 500);
    $('#itu-mobile-menu-trigger').on('click',function(){
     console.log("menu button clicked")
		document.body.classList.add('visible');
});
   
localStorage.MyCurrentLanguage = trg;

        
                   // $('a').attr('target', '_blank');
                    $('#OriginalPage').attr('target', '_self');
                    $('#AutoTransAr').attr('target', '_self');
                    $('#AutoTransFr').attr('target', '_self');
                    $('#AutoTransEs').attr('target', '_self');
                    $('#AutoTransZh').attr('target', '_self');
                    $('#AutoTransRu').attr('target', '_self');
    
//const button = document.querySelector("button"),
	$( ".ituCardNotification").show();
