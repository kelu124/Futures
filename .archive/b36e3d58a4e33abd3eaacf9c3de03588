	// $("#toastMessageDisclaimer").html("See disclaimer");
      toast = document.querySelector(".ituCardNotification")
      closeIcon = document.querySelector(".close"),
      progress = document.querySelector(".progress");
	
      //let timer1, timer2;
	if (trg == 'ar') {
       
        $( "html" ).attr("dir", "rtl");
        $( "html" ).attr("lang", "ar");
