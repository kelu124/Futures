		// uncomment this for fixed nav when scrolling down the page 
    var nav = $("header > nav");
    var main = $(".main").offset().top;
    var userArea = nav.children(".user-area").children(".user-box");
	$(window).bind('scroll', function() {
		if ($(window).scrollTop() > main) {
			nav.addClass('fixed');
			if (userArea.is(":visible"))
				userArea.fadeToggle('fast');
		} else {
			nav.removeClass('fixed');
		}
	});
	
		
</script>
