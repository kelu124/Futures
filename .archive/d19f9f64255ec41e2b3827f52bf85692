<script>
$('#biznetworkbar h2').click(function(){
	$('#biznetworkbar h2 span.arrows').toggle();
	$('#bnb-drop').slideToggle(200);
	setTimeout(function(e){
		if ($('#bnb-drop').is(":visible")){
			$('#biznetworkbar h2 span.arrows').toggle();
	        $("#bnb-drop").slideUp();
        }
    },10000);
});
$('body').click(function(event){ 
    if (!$(event.target).closest('#biznetworkbar h2').length){
        if ($('#bnb-drop').is(":visible")){
	        $('#biznetworkbar h2 span.arrows').toggle();
            $('#bnb-drop').slideUp(200);
        }
    }        
});
</script>
