<script type="text/javascript">
	function onLinkedInLoad() {
					IN.Event.on(IN, "auth", onLinkedInAuth);
			}
	
	function onLinkedInAuth() {
		IN.API.Profile("me")
			.fields( "id,first-name,last-name,picture-url,public-profile-url,email-address,positions" )
			.result( function(me) {
				
				var ucomp = '', utitle = '';
				for(i = 0; i < me.values[0].positions._total; i++)
				{
					if (me.values[0].positions.values[i].isCurrent)
					{
						ucomp = me.values[0].positions.values[i].company.name;
						utitle = me.values[0].positions.values[i].title;
						break;
					}
				}
				$.post( "/useractions/loginli/", {
						uid: me.values[0].id, 
						fname: me.values[0].firstName,
						lname: me.values[0].lastName, 
						ueml: me.values[0].emailAddress,
						uimg: me.values[0].pictureUrl,
						ucomp: ucomp,
						utitle: utitle
						//uname: me.values[0].publicProfileUrl
					})
					.done(function(xml){
						if ( $("status", xml).text() == 'allowed' )
						{
							if ($("newUser", xml).text() == "true")
								window.location.href = "/users/profile/";
							else
								window.location.reload();
						}
						else
							alert('Error: Something bad just happened. Our tech department has been notified. Please try again later.');
						
					})
					.fail(function(xml){
						alert("Error: something wasn't right there, please try again.");
					});
					
			});
	}
</script>
