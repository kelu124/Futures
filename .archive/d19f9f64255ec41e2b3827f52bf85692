	$("form.searchbox").submit(function(e) {
        
		if ($(this).find("input[name='terms']").val() == "")
		{
			alert("Please enter the keywords you wish to search for");
			e.preventDefault();
		}
		
    });
	
	$(".submit-button.disabled, .form .submit.disabled input").click(function(e) {
        e.preventDefault();
    });
	
	// Simulates clicking a tab, called on page load & can be used to allow alias links to tab pages
	window._clickTab = function() {
		// If a hash is in the URL see if we can find the tab it relates to
		var hash = window.parent.location.hash.replace("#", "#tab-");
		if ($(hash).length != 0)
			$(hash).click();
		/*
		else
		{
			// Otherwise check to see if the last portion of the URL is a tab and replaceState was used
			var tab, href = $.trim(window.parent.location.pathname).split("/");
			
			tab = "#tab-" + href[href.length-2];
			if ($(tab).length != 0)
				$(tab).click();
					
			//for (i = 1; i < href.length - 1; i++)
			//{
			//	tab = "#tab-" + href[i];
			//	if ($(tab).length != 0)
			//		$(tab).click();
			//}
		}
		*/
	};
	window._clickTab();
	
	window._updateUrl = function(url, stateObj, addToHistory){
		stateObj = stateObj || {url: url};
		if (!addToHistory)
			history.replaceState(stateObj, document.title, url);
		else
			history.pushState(stateObj, document.title, url);
					ga('send', 'pageview');
			};
	
	$("header .user-area, #main.login > .module, #comments .login-prompt, #content.submit.event #main.login > .module").useractions({
		twitterId: '',
		facebookId: '',
		linkedinId: ''
	});
	
	$(".module .people > div > div").each(function(index, element) {
		
        var width = $(this).width() + parseInt($(this).css("padding-left").replace("px", "")) + parseInt($(this).css("padding-right").replace("px", ""));
		
		if ($(this).offset().left < 0)
			$(this).parent().addClass("offset-left");
			
		if ($(this).offset().left + width > $("body").width())
			$(this).parent().addClass("offset-right");
		
    }).parents(".module:first").addClass("collapsed");
	
	$(".module .people").children("div")
		.hover(function(e) {
			$(this).toggleClass("on");
			if ($("html").hasClass("touch") && !$(this).parents(".module:first").hasClass("details"))
				$(this).addClass("hovering");
		})
		.click(function(e) {
			if ($("html").hasClass("touch") && $(this).hasClass("hovering"))
			{
				e.preventDefault();
				$(this).removeClass("hovering");
			}
		});
	
	$(".module.tabs > a, .module .tabs > a").click(function(e) {
		e.preventDefault();
		
		var tab = $(this).text().toLowerCase(), 
			href = $(this).attr("href");
		
		tab = tab.replace(' @ ', " ");	
		tab = tab.replace('@', "");
		tab = tab.replace(/\s/g, "-");
		tab = tab.replace(/\//g, "");
			
		if (href.indexOf("#") > -1)
		{
			href = href.substr(href.indexOf("#") + 1);
			if (href != window.parent.location.hash)
				window.parent.location.hash = href;
		}
		else if (href != "javascript:void(0);")
		{
			//href = $.trim(href).split("/");
			//history.replaceState({url: href}, document.title, href);
			window._updateUrl(href);
		}
		
		/*
		if (typeof $(this).attr("data-alias") != "undefined")
		{
			window._clickTab();
			return;
		}
		*/
		
		$(this)
			.addClass("on")
			.siblings()
			.removeClass("on");
		
		$module = $(this).parents(".module:first");
		
		tab = tab.replace('-&-','-and-');
		$tab = $module.find(".tab-" + tab );
		$tab.addClass("on")
			.children(".sub").removeClass("on").eq(0).addClass("on");
			
		if (typeof $.fn.hideOverflow != "undefined")
			$tab.find(".hide-overflow").hideOverflow();
		
		$tab.siblings().removeClass("on");
	});
</script>
