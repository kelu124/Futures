	$("#sidebar .events.module").each(function(index, element) {
		
		var _this = this,
			timer,
			timeout = 8000,
			speed = 1000,
			$tabs = $(_this).find(".tabs");
			
		var start = function(){
			timer = setTimeout(change, timeout);
		};
		
		var stop = function(){
			clearTimeout(timer);
		};
		
		var change = function(){
			
			// Find the current/next tab/container
			var $currentTab = $tabs.children(".on");
			var $nextTab = $currentTab.next();
			if ($nextTab.length == 0)
				$nextTab = $tabs.children().first();
			
			var $current = $(_this).children(".container.on");
			var $next = $(_this).children(".container").eq( $nextTab.index() );
			
			$currentTab.removeClass("on");
			$current.removeClass("on");
			
			$nextTab.addClass("on");
			$next.addClass("on");
			
			start();
		};
		
		// Pause the timer while hovering over the module
		$(_this).hover(
			function(){ stop(); },
			function(){ start(); }
		);
		/* Removed for now
		// The containers are position: absolute so manually set the required height of the module
		var height = 0;
		$(_this).children(".container").each(function(index, element) {
			if ($(this).height() > height)
				height = $(this).height();
		});
		
		// Try and add the promo height to the module, but it might not be loaded yet
		var $promo = $(this).children(".promo");
		if ($promo.length == 1)
		{
			if ($promo.height() > 0)
				height += $promo.height() + 15;
			else
			{
				$("#sidebar .events.module .promo img").on("load", function(e) {
					var $promo = $(this).parents(".promo").first();
					$promo.parent().height( $promo.parent().height() + $promo.height() + 15 );
				});
			}
		}
		
		$(_this).height(height + 68);
		*/
		// Let's begin...
		start();
	});
